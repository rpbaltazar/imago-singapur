- model_class = Person
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:nickname)
      %th= model_class.human_attribute_name(:arrival_date)
      %th= model_class.human_attribute_name(:sex)
      %th= model_class.human_attribute_name(:exit_date)
      %th= model_class.human_attribute_name(:birthday)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @people.each do |person|
      %tr
        %td= link_to person.id, person_path(person)
        %td= person.nickname
        %td= person.arrival_date
        %td= person.sex
        %td= person.exit_date
        %td= person.birthday
        %td=l person.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_person_path(person), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), person_path(person), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_person_path, :class => 'btn btn-primary'
