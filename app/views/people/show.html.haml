- model_class = Person
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:nickname) + ':'
  %br
  = @person.nickname
%p
  %strong= model_class.human_attribute_name(:arrival_date) + ':'
  %br
  = @person.arrival_date
%p
  %strong= model_class.human_attribute_name(:sex) + ':'
  %br
  = @person.sex
%p
  %strong= model_class.human_attribute_name(:exit_date) + ':'
  %br
  = @person.exit_date
%p
  %strong= model_class.human_attribute_name(:birthday) + ':'
  %br
  = @person.birthday

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), people_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_person_path(@person), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), person_path(@person), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
