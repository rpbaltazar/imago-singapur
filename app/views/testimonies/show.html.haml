- model_class = Testimony
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:lat) + ':'
  %br
  = @testimony.lat
%p
  %strong= model_class.human_attribute_name(:lon) + ':'
  %br
  = @testimony.lon
%p
  %strong= model_class.human_attribute_name(:story_date) + ':'
  %br
  = @testimony.story_date
%p
  %strong= model_class.human_attribute_name(:memory) + ':'
  %br
  = @testimony.memory
%p
  %strong= model_class.human_attribute_name(:audio_url) + ':'
  %br
  = @testimony.audio_url
%p
  %strong= model_class.human_attribute_name(:image_url) + ':'
  %br
  = @testimony.image_url
%p
  %strong= model_class.human_attribute_name(:video_url) + ':'
  %br
  = @testimony.video_url
%p
  %strong= model_class.human_attribute_name(:person_id) + ':'
  %br
  = @testimony.person_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), root_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_testimony_path(@testimony), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), testimony_path(@testimony), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
