- model_class = Testemony
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:lat)
      %th= model_class.human_attribute_name(:lon)
      %th= model_class.human_attribute_name(:story_date)
      %th= model_class.human_attribute_name(:memory)
      %th= model_class.human_attribute_name(:audio_url)
      %th= model_class.human_attribute_name(:image_url)
      %th= model_class.human_attribute_name(:video_url)
      %th= model_class.human_attribute_name(:person_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @testemonies.each do |testemony|
      %tr
        %td= link_to testemony.id, testemony_path(testemony)
        %td= testemony.lat
        %td= testemony.lon
        %td= testemony.story_date
        %td= testemony.memory
        %td= testemony.audio_url
        %td= testemony.image_url
        %td= testemony.video_url
        %td= testemony.person_id
        %td=l testemony.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_testemony_path(testemony), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), testemony_path(testemony), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_testemony_path, :class => 'btn btn-primary'
