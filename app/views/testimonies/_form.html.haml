= form_for @testimony, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :lat, :class => 'control-label'
    .controls
      = f.text_field :lat, :class => 'text_field'
  .control-group
    = f.label :lon, :class => 'control-label'
    .controls
      = f.text_field :lon, :class => 'text_field'
  .control-group
    = f.label :story_date, :class => 'control-label'
    .controls
      = f.text_field :story_date, :class => 'text_field'
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :headline, :class => 'control-label'
    .controls
      = f.text_field :headline, :class => 'text_field'
  .control-group
    = f.label :memory, :class => 'control-label'
    .controls
      = f.text_area :memory, :class => 'text_area'
  -# .control-group
  -#   = f.label :audio_url, :class => 'control-label'
  -#   .controls
  -#     = f.text_field :audio_url, :class => 'text_field'
  -# .control-group
  -#   = f.label :video_url, :class => 'control-label'
  -#   .controls
  -#     = f.text_field :video_url, :class => 'text_field'
  -# .control-group
    -# = f.label :image_url, :class => 'control-label'
    -# .controls
    -#   = f.text_field :image_url, :class => 'text_field'
  .control-group
    = f.label :memory_img, :class => 'control-label'
    .controls
      = f.file_field :memory_img
  .form-actions
    = f.submit 'Save Story', :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), root_path, :class => 'btn'
